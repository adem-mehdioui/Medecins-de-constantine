<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="2dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/medecin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_max"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ksh 12,000"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_nom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Samsung Galaxy Note 10"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_preom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Samsung Galaxy Note 10"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_sexe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Samsung Galaxy Note 10"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_specialite"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Samsung Galaxy Note 10"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_adresse"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Samsung Galaxy Note 10"
                style="@style/SecondaryTextTheme"
                android:id="@+id/medecin_numtel"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>